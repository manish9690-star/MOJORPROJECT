<% layout("/layouts/boilerplate")%>
  <div class="container mt-5">
    <h3 class="mb-4">Listing Details</h3>

    <!-- Image -->
    <img src="<%= listing.image.url %>" alt="listing image" class="card-img-top mb-3"
      style="height: 300px; object-fit: cover; border-radius: 12px;" />

    <!-- Text Details -->
    <h5 class="fw-bold">Owned By <%= listing.owner.username %>
    </h5>
    <p class="text-muted">
      <%= listing.description %>
    </p>
    <p>&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night</p>
    <p>
      <%= listing.location %>
    </p>
    <p>
      <%= listing.country %>
    </p>

    <!-- Buttons -->
    <% if (currentUser && currentUser._id.equals(listing.owner._id) ){ %>
      <a href="/listings" class="btn btn-outline-dark btn-sm mb-3">Back to Listings</a>
      <div class="d-flex align-items-center gap-2 mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger btn-sm">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark btn-sm" title="Delete">
            <i class="bi bi-trash3-fill"></i>
          </button>
        </form>
      </div>
      <% } %>

        <!-- Review Form -->
        <% if(currentUser){ %>
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h4 class="card-title mb-3">Leave a Review</h4>

              <form action="/listings/<%= listing._id %>/reviews" method="POST">
                
                 <div class="mb-3 mt-3">
                <fieldset class="starability-slot">
                 
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>

                <div class="mb-3">
                  <label for="comment" class="form-label fw-bold">Comments</label>
                  <textarea name="review[comment]" id="comment" rows="3" class="form-control"
                    placeholder="Write your review here..."></textarea>
                </div>

                <button class="btn btn-dark">Submit</button>
              </form>
            </div>
          </div>
          <% } %>

            <!-- All Reviews -->
            <h5 class="mb-3"><b>All Reviews</b></h5>
            <div class="row row-cols-1 row-cols-md-2 g-3">
              <% listing.reviews.forEach(review=> { %>
                <div class="col">
                  <div class="card shadow-sm h-100">
                    <div class="card-body">
                     
                      <h6 class="fw-bold text-dark mb-2">
                        @<%= review.author ? review.author.username : "Anonymous" %>
                      </h6>
                     
                   
                      <p class="starability-result card-text" data-rating="<%= review.rating %>">
                       
                      </p>
                       <p class="mb-3">
                        <strong>Comment:</strong>
                        <%= review.comment %>
                      </p>

                      <% if(currentUser && review.author && review.author._id.equals(currentUser._id)){ %>
                        <form method="POST"
                          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>
  </div>